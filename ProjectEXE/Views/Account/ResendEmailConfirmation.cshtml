@{
    ViewData["Title"] = "Email xác nhận đã được gửi lại";
}

@section Styles {
    <link rel="stylesheet" href="~/css/resend-email-confirmation.css?v=@DateTime.Now.Ticks" />
}

<div class="resend-confirmation-page">
    <div class="container">
        <div class="resend-wrapper">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6 col-sm-8">
                    <div class="resend-card">
                        <!-- Success Animation -->
                        <div class="success-animation">
                            <div class="plane-container">
                                <div class="paper-plane">
                                    <i class="fas fa-paper-plane"></i>
                                </div>
                                <div class="flight-path">
                                    <div class="path-dot dot-1"></div>
                                    <div class="path-dot dot-2"></div>
                                    <div class="path-dot dot-3"></div>
                                    <div class="path-dot dot-4"></div>
                                </div>
                                <div class="destination">
                                    <i class="fas fa-envelope-open"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Card Header -->
                        <div class="resend-header">
                            <div class="header-icon">
                                <i class="fas fa-redo-alt"></i>
                            </div>
                            <h3>Email đã được gửi lại!</h3>
                            <p class="header-subtitle">Kiểm tra email của bạn</p>
                        </div>

                        <!-- Card Body -->
                        <div class="resend-body">
                            <div class="message-content">
                                <div class="main-message">
                                    <h4>✈️ Email xác nhận đã được gửi lại</h4>
                                    <p>Nếu bạn đã đăng ký với email này trước đó và chưa xác nhận, chúng tôi đã gửi một liên kết xác nhận mới.</p>
                                </div>

                                <div class="status-indicator">
                                    <div class="status-item completed">
                                        <div class="status-icon">
                                            <i class="fas fa-check"></i>
                                        </div>
                                        <div class="status-content">
                                            <strong>Email đã được gửi</strong>
                                            <span>Vừa được gửi thành công</span>
                                        </div>
                                        <div class="status-time">
                                            <span id="currentTime"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="next-steps">
                                    <h5>📋 Các bước tiếp theo:</h5>
                                    <div class="step-list">
                                        <div class="step-item">
                                            <div class="step-number">1</div>
                                            <div class="step-content">
                                                <strong>Kiểm tra hộp thư đến</strong>
                                                <span>Email thường đến trong vài phút</span>
                                            </div>
                                        </div>
                                        <div class="step-item">
                                            <div class="step-number">2</div>
                                            <div class="step-content">
                                                <strong>Kiểm tra thư mục spam</strong>
                                                <span>Nếu không thấy trong hộp thư chính</span>
                                            </div>
                                        </div>
                                        <div class="step-item">
                                            <div class="step-number">3</div>
                                            <div class="step-content">
                                                <strong>Nhấp vào liên kết</strong>
                                                <span>Để hoàn tất xác nhận tài khoản</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="info-notice">
                                    <div class="notice-icon">
                                        <i class="fas fa-info-circle"></i>
                                    </div>
                                    <div class="notice-content">
                                        <strong>Lưu ý:</strong>
                                        <p>Liên kết xác nhận sẽ có hiệu lực trong vòng 24 giờ. Nếu hết hạn, bạn có thể yêu cầu gửi lại.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Footer -->
                        <div class="resend-footer">
                            <a asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt"></i>
                                Quay lại trang đăng nhập
                            </a>

                            <div class="additional-actions">
                                <div class="action-links">
                                    <a href="#" class="action-link" onclick="openEmailClient()">
                                        <i class="fas fa-external-link-alt"></i>
                                        Mở ứng dụng email
                                    </a>
                                    <span class="divider">•</span>
                                    <a href="#" class="action-link">
                                        <i class="fas fa-question-circle"></i>
                                        Cần trợ giúp?
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tips Section -->
                    <div class="tips-section">
                        <div class="tip-card">
                            <div class="tip-icon">
                                <i class="fas fa-lightbulb"></i>
                            </div>
                            <div class="tip-content">
                                <h6>💡 Mẹo hữu ích</h6>
                                <p>Thêm địa chỉ email của chúng tôi vào danh bạ để tránh email bị lọc spam trong tương lai.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Set current time
            updateCurrentTime();

            // Trigger animations
            setTimeout(function() {
                document.querySelector('.resend-card').classList.add('animate');
                document.querySelector('.success-animation').classList.add('animate');
            }, 300);

            // Auto-refresh time every minute
            setInterval(updateCurrentTime, 60000);
        });

        // Update current time display
        function updateCurrentTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('vi-VN', {
                hour: '2-digit',
                minute: '2-digit'
            });

            const timeElement = document.getElementById('currentTime');
            if (timeElement) {
                timeElement.textContent = timeString;
            }
        }

        // Open email client
        function openEmailClient() {
            // Try to detect common email clients
            const userAgent = navigator.userAgent.toLowerCase();

            if (/android/i.test(userAgent)) {
                // Android email intent
                window.location.href = 'intent://send#Intent;scheme=mailto;package=com.google.android.gm;end';
            } else if (/iphone|ipad|ipod/i.test(userAgent)) {
                // iOS mail app
                window.location.href = 'message://';
            } else {
                // Desktop - try to open default email client
                window.location.href = 'mailto:';
            }
        }

        // Show notification helper
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;

            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }
    </script>
}