@model ProjectEXE.ViewModel.AccountViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

@section Styles {
    <link rel="stylesheet" href="~/css/forgot-password.css?v=@DateTime.Now.Ticks" />
}

<div class="forgot-password-wrapper">
    <div class="forgot-password-container">
        <div class="forgot-password-card">
            <!-- Forgot Password Header -->
            <div class="forgot-password-header">
                <div class="header-icon">
                    <i class="fas fa-unlock-alt"></i>
                    <div class="icon-pulse"></div>
                </div>
                <h2 class="forgot-title">Quên mật khẩu?</h2>
                <p class="forgot-subtitle">Đừng lo lắng! Chúng tôi sẽ giúp bạn lấy lại tài khoản</p>
            </div>

            <!-- Process Steps -->
            <div class="process-steps">
                <div class="step active">
                    <div class="step-number">1</div>
                    <span class="step-text">Nhập email</span>
                </div>
                <div class="step-line"></div>
                <div class="step">
                    <div class="step-number">2</div>
                    <span class="step-text">Kiểm tra email</span>
                </div>
                <div class="step-line"></div>
                <div class="step">
                    <div class="step-number">3</div>
                    <span class="step-text">Đặt lại mật khẩu</span>
                </div>
            </div>

            <!-- Forgot Password Body -->
            <div class="forgot-password-body">
                <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <!-- Information Box -->
                    <div class="info-box">
                        <div class="info-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="info-content">
                            <h6>Hướng dẫn khôi phục</h6>
                            <p>Nhập địa chỉ email đã đăng ký tài khoản. Chúng tôi sẽ gửi liên kết khôi phục mật khẩu đến email của bạn.</p>
                        </div>
                    </div>

                    <!-- Email Input -->
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email của bạn" autocomplete="email" id="emailInput" />
                        <label asp-for="Email">Địa chỉ email</label>
                        <div class="input-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <!-- Email Validation Status -->
                    <div class="email-status" id="emailStatus" style="display: none;">
                        <i class="fas fa-check-circle"></i>
                        <span>Email hợp lệ</span>
                    </div>

                    <!-- Help Text -->
                    <div class="help-text">
                        <i class="fas fa-lightbulb"></i>
                        <span>Liên kết khôi phục sẽ được gửi đến email này và có hiệu lực trong 15 phút.</span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-send-reset" id="sendButton">
                        <i class="fas fa-paper-plane"></i>
                        <span id="sendText">Gửi liên kết khôi phục</span>
                        <div class="btn-loader" id="btnLoader"></div>
                    </button>

                    <!-- Security Notice -->
                    <div class="security-notice">
                        <div class="notice-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="notice-content">
                            <strong>Bảo mật:</strong> Chúng tôi không bao giờ chia sẻ thông tin email của bạn với bên thứ ba.
                        </div>
                    </div>
                </form>
            </div>

            <!-- Forgot Password Footer -->
            <div class="forgot-password-footer">
                <div class="footer-links">
                    <a asp-action="Login" class="footer-link primary">
                        <i class="fas fa-arrow-left"></i>
                        Quay lại đăng nhập
                    </a>
                    <a asp-action="Register" class="footer-link">
                        <i class="fas fa-user-plus"></i>
                        Tạo tài khoản mới
                    </a>
                </div>

                <!-- Support Section -->
                <div class="support-section">
                    <p class="support-text">Vẫn gặp khó khăn?</p>
                    <div class="support-options">
                        <a href="#" class="support-link">
                            <i class="fas fa-question-circle"></i>
                            Trung tâm trợ giúp
                        </a>
                        <a href="#" class="support-link">
                            <i class="fas fa-envelope"></i>
                            Liên hệ hỗ trợ
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Background Decoration -->
        <div class="decoration-elements">
            <div class="floating-shape shape-1">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="floating-shape shape-2">
                <i class="fas fa-lock"></i>
            </div>
            <div class="floating-shape shape-3">
                <i class="fas fa-key"></i>
            </div>
            <div class="decoration-circle circle-1"></div>
            <div class="decoration-circle circle-2"></div>
            <div class="decoration-circle circle-3"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/forgot-password.js?v=@DateTime.Now.Ticks"></script>
}