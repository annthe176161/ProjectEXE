@model ProjectEXE.ViewModel.AccountViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css?v=@DateTime.Now.Ticks" />
}

<div class="register-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-11">
                <!-- Register Card -->
                <div class="register-card">
                    <!-- Card Header -->
                    <div class="register-header">
                        <div class="header-content">
                            <div class="header-icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="header-text">
                                <h2>Tạo tài khoản mới</h2>
                                <p>Tham gia cộng đồng mua bán trực tuyến hàng đầu</p>
                            </div>
                        </div>
                        <div class="header-decoration">
                            <div class="decoration-dot dot-1"></div>
                            <div class="decoration-dot dot-2"></div>
                            <div class="decoration-dot dot-3"></div>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="register-body">
                        <form asp-action="Register" method="post" id="registerForm" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger validation-summary"></div>

                            <!-- Progress Steps -->
                            <div class="form-progress">
                                <div class="progress-step active" data-step="1">
                                    <div class="step-circle">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <span class="step-label">Thông tin cá nhân</span>
                                </div>
                                <div class="progress-line"></div>
                                <div class="progress-step" data-step="2">
                                    <div class="step-circle">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <span class="step-label">Bảo mật</span>
                                </div>
                                <div class="progress-line"></div>
                                <div class="progress-step" data-step="3">
                                    <div class="step-circle">
                                        <i class="fas fa-user-tag"></i>
                                    </div>
                                    <span class="step-label">Vai trò</span>
                                </div>
                            </div>

                            <!-- Step 1: Personal Information -->
                            <div class="form-step active" data-step="1">
                                <div class="step-header">
                                    <h4>
                                        <i class="fas fa-user-circle"></i>
                                        Thông tin cá nhân
                                    </h4>
                                    <p>Vui lòng cung cấp thông tin chính xác để tạo tài khoản</p>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FullName" class="form-label">
                                                <i class="fas fa-signature"></i>
                                                Họ và tên *
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên đầy đủ..." />
                                                <div class="input-icon">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="FullName" class="text-danger field-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email" class="form-label">
                                                <i class="fas fa-envelope"></i>
                                                Email *
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                                                <div class="input-icon">
                                                    <i class="fas fa-at"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger field-error"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber" class="form-label">
                                                <i class="fas fa-phone"></i>
                                                Số điện thoại *
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="PhoneNumber" class="form-control" placeholder="0xxx xxx xxx" />
                                                <div class="input-icon">
                                                    <i class="fas fa-mobile-alt"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger field-error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Address" class="form-label">
                                                <i class="fas fa-map-marker-alt"></i>
                                                Địa chỉ *
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ của bạn..." />
                                                <div class="input-icon">
                                                    <i class="fas fa-home"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Address" class="text-danger field-error"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- Phần mã giới thiệu -->
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="form-group referral-code-wrapper">
                                            <label asp-for="ReferredBy" class="form-label">
                                                <i class="fas fa-user-friends"></i>
                                                Mã giới thiệu (nếu có)
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="ReferredBy" class="form-control" placeholder="Nhập mã giới thiệu nếu có..." />
                                                <div class="input-icon">
                                                    <i class="fas fa-ticket-alt"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="ReferredBy" class="text-danger field-error"></span>

                                            <div class="referral-info">
                                                <i class="fas fa-info-circle"></i>
                                                <span>Nhập mã giới thiệu để nhận các đặc quyền dành cho thành viên mới</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 2: Security -->
                            <div class="form-step" data-step="2">
                                <div class="step-header">
                                    <h4>
                                        <i class="fas fa-shield-check"></i>
                                        Thiết lập bảo mật
                                    </h4>
                                    <p>Tạo mật khẩu mạnh để bảo vệ tài khoản của bạn</p>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Password" class="form-label">
                                                <i class="fas fa-lock"></i>
                                                Mật khẩu *
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                                                <div class="input-icon">
                                                    <i class="fas fa-key"></i>
                                                </div>
                                                <button type="button" class="toggle-password" data-target="Password">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger field-error"></span>
                                            <div class="password-strength">
                                                <div class="strength-bar">
                                                    <div class="strength-fill"></div>
                                                </div>
                                                <div class="strength-text">Độ mạnh mật khẩu</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ConfirmPassword" class="form-label">
                                                <i class="fas fa-lock"></i>
                                                Xác nhận mật khẩu *
                                            </label>
                                            <div class="input-wrapper">
                                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu..." />
                                                <div class="input-icon">
                                                    <i class="fas fa-check-circle"></i>
                                                </div>
                                                <button type="button" class="toggle-password" data-target="ConfirmPassword">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger field-error"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="password-requirements">
                                    <h6>Yêu cầu mật khẩu:</h6>
                                    <div class="requirements-list">
                                        <div class="requirement-item" data-requirement="length">
                                            <i class="fas fa-circle"></i>
                                            <span>Ít nhất 8 ký tự</span>
                                        </div>
                                        <div class="requirement-item" data-requirement="uppercase">
                                            <i class="fas fa-circle"></i>
                                            <span>Ít nhất 1 chữ hoa</span>
                                        </div>
                                        <div class="requirement-item" data-requirement="lowercase">
                                            <i class="fas fa-circle"></i>
                                            <span>Ít nhất 1 chữ thường</span>
                                        </div>
                                        <div class="requirement-item" data-requirement="number">
                                            <i class="fas fa-circle"></i>
                                            <span>Ít nhất 1 số</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Step 3: Role Selection -->
                            <div class="form-step" data-step="3">
                                <div class="step-header">
                                    <h4>
                                        <i class="fas fa-users"></i>
                                        Chọn vai trò của bạn
                                    </h4>
                                    <p>Lựa chọn vai trò phù hợp với mục đích sử dụng</p>
                                </div>

                                <div class="role-selection">
                                    <div class="role-option" data-role="buyer">
                                        <input class="form-check-input" type="radio" name="RoleId" id="roleBuyer" value="2" checked>
                                        <label class="role-card" for="roleBuyer">
                                            <div class="role-icon">
                                                <i class="fas fa-shopping-cart"></i>
                                            </div>
                                            <div class="role-content">
                                                <h5>Người mua</h5>
                                                <p>Khám phá và mua sắm những sản phẩm chất lượng từ các người bán uy tín</p>
                                                <div class="role-features">
                                                    <span class="feature">✓ Tìm kiếm sản phẩm</span>
                                                    <span class="feature">✓ Đặt hàng và thanh toán</span>
                                                    <span class="feature">✓ Đánh giá sản phẩm</span>
                                                </div>
                                            </div>
                                        </label>
                                    </div>

                                    <div class="role-option" data-role="seller">
                                        <input class="form-check-input" type="radio" name="RoleId" id="roleSeller" value="3">
                                        <label class="role-card" for="roleSeller">
                                            <div class="role-icon">
                                                <i class="fas fa-store"></i>
                                            </div>
                                            <div class="role-content">
                                                <h5>Người bán</h5>
                                                <p>Bán các sản phẩm của bạn và tiếp cận hàng triệu khách hàng tiềm năng</p>
                                                <div class="role-features">
                                                    <span class="feature">✓ Đăng bán sản phẩm</span>
                                                    <span class="feature">✓ Quản lý cửa hàng</span>
                                                    <span class="feature">✓ Theo dõi doanh thu</span>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Navigation Buttons -->
                            <div class="form-navigation">
                                <button type="button" class="btn btn-outline" id="prevBtn" style="display: none;">
                                    <i class="fas fa-arrow-left"></i>
                                    Quay lại
                                </button>
                                <button type="button" class="btn btn-primary" id="nextBtn">
                                    Tiếp tục
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                                <button type="submit" class="btn btn-success" id="submitBtn" style="display: none;">
                                    <i class="fas fa-user-check"></i>
                                    Tạo tài khoản
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Card Footer -->
                    <div class="register-footer">
                        <div class="footer-content">
                            <p class="login-prompt">
                                Đã có tài khoản?
                                <a asp-action="Login" class="login-link">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Đăng nhập ngay
                                </a>
                            </p>
                            <div class="security-note">
                                <i class="fas fa-shield-alt"></i>
                                <span>Thông tin của bạn được bảo mật an toàn</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Benefits Section -->
                <div class="benefits-section">
                    <h5>
                        <i class="fas fa-star"></i>
                        Tại sao chọn chúng tôi?
                    </h5>
                    <div class="benefits-grid">
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-shield-check"></i>
                            </div>
                            <div class="benefit-content">
                                <h6>Bảo mật cao</h6>
                                <p>Hệ thống bảo mật hiện đại</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <div class="benefit-content">
                                <h6>Giao hàng nhanh</h6>
                                <p>Đảm bảo giao hàng đúng hẹn</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-headset"></i>
                            </div>
                            <div class="benefit-content">
                                <h6>Hỗ trợ 24/7</h6>
                                <p>Luôn sẵn sàng hỗ trợ bạn</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-medal"></i>
                            </div>
                            <div class="benefit-content">
                                <h6>Chất lượng đảm bảo</h6>
                                <p>Sản phẩm được kiểm định</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/register.js?v=@DateTime.Now.Ticks"></script>
}