@model ProjectEXE.ViewModel.Voucher.VoucherViewModel

@{
    ViewData["Title"] = "Xóa Voucher";
}

<div class="container-fluid">
    <h2 class="text-danger">Xóa Voucher</h2>
    <hr />

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Cảnh báo</h5>
        </div>
        <div class="card-body">
            <p class="mb-0">Bạn có chắc chắn muốn xóa voucher này? Hành động này không thể hoàn tác.</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mã voucher:</dt>
                        <dd class="col-sm-8">@Model.Code</dd>

                        <dt class="col-sm-4">Giảm giá:</dt>
                        <dd class="col-sm-8">@Model.Discount%</dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreateAt.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Ngày hết hạn:</dt>
                        <dd class="col-sm-8">@(Model.ExpiryDate.HasValue ? Model.ExpiryDate.Value.ToString("dd/MM/yyyy") : "Không có")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-6">Giá trị đơn hàng tối thiểu:</dt>
                        <dd class="col-sm-6">@(Model.MinOrderValue.HasValue ? string.Format("{0:N0} đ", Model.MinOrderValue) : "Không có")</dd>

                        <dt class="col-sm-6">Giảm giá tối đa:</dt>
                        <dd class="col-sm-6">@(Model.MaxDiscountAmount.HasValue ? string.Format("{0:N0} đ", Model.MaxDiscountAmount) : "Không có")</dd>

                        <dt class="col-sm-6">Số lượng:</dt>
                        <dd class="col-sm-6">@Model.Quantity</dd>

                        <dt class="col-sm-6">Trạng thái:</dt>
                        <dd class="col-sm-6">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Không kích hoạt</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.VoucherId" />
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>