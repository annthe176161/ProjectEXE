@model ProjectEXE.ViewModel.Admin.PackagePaymentListViewModel
@{
    ViewData["Title"] = "Quản lý Gói Dịch vụ";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <h1 class="mb-4"><i class="fas fa-crown me-2"></i>Quản lý Gói Dịch vụ</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Dashboard Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Đang chờ xử lý</h6>
                            <h2 class="mb-0">@Model.TotalPending</h2>
                        </div>
                        <div>
                            <i class="fas fa-hourglass-half fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-primary border-top-0">
                    <a href="@Url.Action("PendingPayments")" class="text-white text-decoration-none">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Đã xác nhận</h6>
                            <h2 class="mb-0">@Model.TotalConfirmed</h2>
                        </div>
                        <div>
                            <i class="fas fa-check-circle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-success border-top-0">
                    <a href="@Url.Action("CompletedPayments")" class="text-white text-decoration-none">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Đã từ chối</h6>
                            <h2 class="mb-0">@Model.TotalRejected</h2>
                        </div>
                        <div>
                            <i class="fas fa-times-circle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-danger border-top-0">
                    <a href="@Url.Action("RejectedPayments")" class="text-white text-decoration-none">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Tổng doanh thu</h6>
                            <h2 class="mb-0">@Model.TotalRevenue.ToString("N0")₫</h2>
                        </div>
                        <div>
                            <i class="fas fa-money-bill-wave fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-info border-top-0">
                    <span class="text-white">Từ các gói đã kích hoạt</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Payments List -->
    <div class="card mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-hourglass-half me-2"></i>Thanh toán đang chờ xử lý</h5>
            <a href="@Url.Action("PendingPayments")" class="btn btn-sm btn-primary">Xem tất cả</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã giao dịch</th>
                            <th>Người mua</th>
                            <th>Gói dịch vụ</th>
                            <th>Số tiền</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PendingPayments.Any())
                        {
                            foreach (var payment in Model.PendingPayments)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary me-1">Mới</span>
                                        @payment.TransactionCode
                                    </td>
                                    <td>
                                        <div>@payment.UserFullName</div>
                                        <small class="text-muted">@payment.UserEmail</small>
                                    </td>
                                    <td>@payment.PackageName</td>
                                    <td><strong class="text-danger">@payment.Amount.ToString("N0")₫</strong></td>
                                    <td>@payment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = payment.PaymentId })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">Không có thanh toán nào đang chờ xử lý</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Recent Processed Payments -->
    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Thanh toán gần đây</h5>
            <div>
                <a href="@Url.Action("CompletedPayments")" class="btn btn-sm btn-success me-2">Đã xác nhận</a>
                <a href="@Url.Action("RejectedPayments")" class="btn btn-sm btn-danger">Đã từ chối</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã giao dịch</th>
                            <th>Người mua</th>
                            <th>Gói dịch vụ</th>
                            <th>Số tiền</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentPayments.Any())
                        {
                            foreach (var payment in Model.RecentPayments)
                            {
                                <tr>
                                    <td>@payment.TransactionCode</td>
                                    <td>
                                        <div>@payment.UserFullName</div>
                                        <small class="text-muted">@payment.UserEmail</small>
                                    </td>
                                    <td>@payment.PackageName</td>
                                    <td><strong class="text-danger">@payment.Amount.ToString("N0")₫</strong></td>
                                    <td>
                                        @if (payment.StatusId == 2)
                                        {
                                            <span class="badge bg-success">Đã xác nhận</span>
                                        }
                                        else if (payment.StatusId == 3)
                                        {
                                            <span class="badge bg-danger">Đã từ chối</span>
                                        }
                                    </td>
                                    <td>@payment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = payment.PaymentId })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">Không có thanh toán nào được xử lý gần đây</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>