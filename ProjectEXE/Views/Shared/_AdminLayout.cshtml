<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - REVA Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Admin layout specific styles */
        body {
            background-color: #f8f9fa;
        }

        .admin-sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }

            .admin-sidebar .nav-link {
                color: rgba(255,255,255,.75);
                padding: 0.75rem 1rem;
                border-radius: 0.25rem;
                margin: 0.25rem 0;
            }

                .admin-sidebar .nav-link:hover {
                    color: #fff;
                    background-color: rgba(255,255,255,.1);
                }

                .admin-sidebar .nav-link.active {
                    color: #fff;
                    background-color: #007bff;
                }

        .admin-content {
            flex: 1;
        }

        .admin-header {
            background-color: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="admin-sidebar px-0 pt-3 text-white" style="width: 250px;">
            <div class="text-center mb-4">
                <h4 class="m-0">REVA Admin</h4>
                <div class="small text-muted">Quản lý hệ thống</div>
            </div>
            <ul class="nav flex-column px-3">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="AdminPackageManagement" asp-action="Index">
                        <i class="fas fa-crown me-2"></i>Gói dịch vụ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-store me-2"></i>Quản lý gian hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-users me-2"></i>Quản lý người dùng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-box-open me-2"></i>Quản lý sản phẩm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-chart-bar me-2"></i>Báo cáo & Thống kê
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a class="nav-link text-danger" href="#">
                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="admin-content">
            <!-- Header -->
            <header class="admin-header py-3 px-4 d-flex align-items-center justify-content-between">
                <div>
                    <i class="fas fa-bars me-3" style="cursor: pointer;"></i>
                    <span class="fw-bold">@ViewData["Title"]</span>
                </div>
                <div class="d-flex align-items-center">
                    <div class="position-relative me-3">
                        <i class="fas fa-bell" style="cursor: pointer;"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                        </span>
                    </div>
                    <div class="dropdown">
                        <a class="dropdown-toggle text-decoration-none text-dark" href="#" role="button" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://via.placeholder.com/30" alt="Admin" class="rounded-circle me-1" width="30" height="30">
                            <span>Admin</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-circle me-2"></i>Tài khoản</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Main content area -->
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>