@{
    ViewData["Title"] = "Trang chủ";
}

<link rel="stylesheet" href="~/css/banner.css" />
<link rel="stylesheet" href="~/css/categories.css" />
<link rel="stylesheet" href="~/css/how-it-works.css" />
<link rel="stylesheet" href="~/css/sustainability.css" />
<link rel="stylesheet" href="~/css/blog.css" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Phần Banner Chính --> 
<section class="hero-banner">
    <!-- Carousel Slider -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Slides -->
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="~/images/Slider1.jpeg" class="d-block w-100" alt="Thời trang bền vững">
                <div class="carousel-caption">
                    <h1 class="display-4 fw-bold">Thời Trang Bền Vững</h1>
                    <p class="lead">Lựa chọn thông minh cho tủ đồ của bạn và cho cả hành tinh</p>
                    <div class="hero-buttons">
                        <a asp-controller="Product" asp-action="ProductList" class="btn btn-primary btn-lg">Khám Phá Ngay</a>
                        <a href="#categories" class="btn btn-outline-light btn-lg ms-2">Xem Danh Mục</a>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/images/Slider2.jpg" class="d-block w-100" alt="Thời trang vintage">
                <div class="carousel-caption">
                    <h1 class="display-4 fw-bold">Phong Cách Vintage Độc Đáo</h1>
                    <p class="lead">Tìm kiếm những món đồ có một không hai với giá cả phải chăng</p>
                    <div class="hero-buttons">
                        <a asp-controller="Product" asp-action="ProductList" class="btn btn-primary btn-lg">Bắt Đầu Mua Sắm</a>
                        <a asp-controller="Home" asp-action="HowItWorks" class="btn btn-outline-light btn-lg ms-2">Cách Thức Hoạt Động</a>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/images/Slider3.jpg" class="d-block w-100" alt="Thời trang tiết kiệm">
                <div class="carousel-caption">
                    <h1 class="display-4 fw-bold">Tiết Kiệm Hơn, Phong Cách Hơn</h1>
                    <p class="lead">Giảm đến 70% cho các thương hiệu yêu thích của bạn</p>
                    <div class="hero-buttons">
                        <a asp-controller="Product" asp-action="Deals" class="btn btn-primary btn-lg">Xem Ưu Đãi</a>
                        <a asp-controller="Shop" asp-action="Create" class="btn btn-success btn-lg ms-2">Bán Ngay</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Sustainability Badges -->
    <div class="container-fluid sustainability-badges">
        <div class="container">
            <div class="row g-3 text-center">
                <div class="col-md-3 col-6">
                    <div class="badge-item">
                        <i class="fas fa-tshirt"></i>
                        <h5>Thời Trang Bền Vững</h5>
                        <p>Giảm 700+ tấn rác thải</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="badge-item">
                        <i class="fas fa-leaf"></i>
                        <h5>Thân Thiện Môi Trường</h5>
                        <p>Tiết kiệm 30% tài nguyên</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="badge-item">
                        <i class="fas fa-tags"></i>
                        <h5>Giá Cả Hợp Lý</h5>
                        <p>Tiết kiệm đến 70%</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="badge-item">
                        <i class="fas fa-check-circle"></i>
                        <h5>Chất Lượng Đảm Bảo</h5>
                        <p>Kiểm tra kỹ trước khi giao</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Phần Danh Mục Sản Phẩm Chính -->
<section class="categories-section py-5" id="categories">
    <div class="container-fluid">
        <div class="text-center mb-5">
            <h2 class="section-title">Danh Mục Sản Phẩm</h2>
            <p class="section-subtitle">Khám phá thời trang secondhand chất lượng cao theo phong cách của bạn</p>
