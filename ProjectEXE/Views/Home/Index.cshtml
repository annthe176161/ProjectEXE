            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Áo" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Áo</h4>
                    </div>
                    <img src="~/images/Ao.webp" alt="Áo" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Quần" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Quần</h4>
                    </div>
                    <img src="~/images/Quan.webp" alt="Quần" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Váy" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Váy & Đầm</h4>
                    </div>
                    <img src="~/images/Vay.jpg" alt="Váy & Đầm" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Áo khoác" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Áo Khoác</h4>
                    </div>
                    <img src="~/images/Aokhoac.webp" alt="Áo khoác" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Giày" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Giày</h4>
                    </div>
                    <img src="~/images/Giay.webp" alt="Giày" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Túi" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Túi</h4>
                    </div>
                    <img src="~/images/Tui.jpg" alt="Túi" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="Phụ kiện" class="category-card product-type-card">
                    <div class="card-img-overlay">
                        <h4>Phụ Kiện</h4>
                    </div>
                    <img src="~/images/Phukien.jpg" alt="Phụ kiện" class="card-img">
                </a>
            </div>
            <div class="col-lg-3 col-md-4 col-6">
