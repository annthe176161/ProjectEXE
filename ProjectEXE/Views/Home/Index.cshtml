            <div class="col-md-4 mb-4">
                <a asp-controller="Product" asp-action="ProductList" asp-route-gender="Nam" class="category-card gender-card">
                    <div class="card-img-overlay">
                        <h3>Nam</h3>
                        <span class="btn-explore">Khám phá ngay</span>
                    </div>
                    <img src="~/images/Thoitrangnam.webp" alt="Thời trang nam" class="card-img">
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a asp-controller="Product" asp-action="ProductList" asp-route-gender="Nữ" class="category-card gender-card">
                    <div class="card-img-overlay">
                        <h3>Nữ</h3>
                        <span class="btn-explore">Khám phá ngay</span>
                    </div>
                    <img src="~/images/Thoitrangnu.webp" alt="Thời trang nữ" class="card-img">
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a asp-controller="Product" asp-action="ProductList" asp-route-gender="Unisex" class="category-card gender-card">
                    <div class="card-img-overlay">
                        <h3>Unisex</h3>
                        <span class="btn-explore">Khám phá ngay</span>
                    </div>
                    <img src="~/images/Unisex.webp" alt="Thời trang unisex" class="card-img">
                </a>
            </div>
        </div>

