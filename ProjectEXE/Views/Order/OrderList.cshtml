@model ProjectEXE.ViewModel.OrderViewModel.OrderListViewModel
@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<div class="container py-4">
    <h1 class="mb-4">Danh sách đơn hàng của bạn</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Orders.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Shop</th>
                        <th>Trạng thái</th>
                        <th>Ngày đặt</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>#@order.OrderId</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@order.ProductImageUrl" alt="@order.ProductName" class="me-2" style="width: 50px; height: 50px; object-fit: cover;">
                                    <span>@order.ProductName</span>
                                </div>
                            </td>
                            <td>@order.Price.ToString("N0")₫</td>
                            <td>@order.ShopName</td>
                            <td>
                                @{
                                    var statusClass = order.OrderStatusId switch
                                    {
                                        1 => "text-warning",
                                        2 => "text-primary",
                                        3 => "text-info",
                                        4 => "text-success",
                                        5 => "text-danger",
                                        _ => ""
                                    };
                                }
                                <span class="@statusClass">@order.OrderStatus</span>
                            </td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="OrderList" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            Bạn chưa có đơn hàng nào. <a asp-controller="Product" asp-action="ProductList">Mua sắm ngay</a>
        </div>
    }
</div>